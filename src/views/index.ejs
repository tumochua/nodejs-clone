<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/css/style.css">
    <style>
        form {
            text-align: center;
        }
    </style>
</head>

<body>
    <div class="topnav">
        <a class="active" href="#home">Home</a>
        <a href="#news">News</a>
        <a href="#contact">Contact</a>
        <a href="#about">About</a>
    </div>

    <div style="padding-left:16px">
        <h2>Top Navigation Example</h2>
        <!-- <%= data %> -->
    </div>
    <table>
        <tr>
            <th>STT</th>
            <!-- <th>email</th> -->
            <th>First Name</th>
            <th>Last Name</th>
            <!-- <th>address</th> -->
            <th>Actions</th>
        </tr>
        <% for(var i=0; i < data.length; i++) { %>
            <tr>
                <td>
                    <%= data[i].id %>
                </td>
                <!-- <td>
                    <%= data[i].email %>
                </td> -->
                <td>
                    <%= data[i].firstName %>
                </td>
                <td>
                    <%= data[i].lastName %>
                </td>
                <!-- <td>
                    <%= data[i].address %>
                </td> -->
                <td style="display: flex">
                    <a href="/detail/user/<%=data[i].id%>" target="_blank">Detail</a>
                    <form action="/edit/user/<%=data[i].id%>" method="GET">
                        <button type="submit">Edit</button>
                    </form>
                    <form action="/delete/user" method="POST">
                        <button>Delete</button>
                        <input hidden type="text" value="<%=data[i].id%>" name="userId" />
                    </form>
                </td>
            </tr>
            <% } %>
    </table>

    <form action="/create-new-user" method="POST">
        <label>Email</label><br>
        <input name="email"><br>
        <label>First name:</label><br>
        <input name="firstName"><br>
        <label>Last name:</label><br>
        <input name="lastName"><br>
        <label>Address</label><br>
        <input name="address"><br><br>
        <div>
            <button type="submit">Submit</button>
        </div>

    </form>
    </form>
    <!-- <img src="/image/NODEJSBASIC4.png" /> -->
</body>

</html>